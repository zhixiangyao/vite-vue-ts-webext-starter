{
  "name": "vite-vue-ts-webext-starter",
  "displayName": "Vite WebExt Starter",
  "version": "0.0.1",
  "packageManager": "pnpm@9.15.1",
  "description": "[description]",
  "author": "zhixiangyao <blueskyzx@icloud.com> <https://github.com/zhixiangyao>",
  "license": "MIT",
  "homepage": "https://github.com/zhixiangyao/vite-vue-ts-webext-starter",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zhixiangyao/vite-vue-ts-webext-starter.git"
  },
  "engines": {
    "node": ">=22",
    "pnpm": ">=9"
  },
  "scripts": {
    "dev": "npm run clear && cross-env NODE_ENV=development run-p dev:*",
    "dev-firefox": "npm run clear && cross-env NODE_ENV=development EXTENSION=firefox run-p dev:*",
    "dev:prepare": "esno scripts/prepare.ts",
    "dev:background": "npm run build:background -- --mode development",
    "dev:web": "vite",
    "dev:content": "npm run build:content -- --mode development",
    "build": "cross-env NODE_ENV=production run-s clear build:web build:prepare build:background build:content",
    "build:prepare": "esno scripts/prepare.ts",
    "build:background": "vite build --config vite.config.background.mts",
    "build:web": "vite build",
    "build:content": "vite build --config vite.config.content.mts",
    "pack": "cross-env NODE_ENV=production run-p pack:*",
    "pack:zip": "rimraf extension.zip && jszip-cli add extension/* -o ./extension.zip",
    "pack:crx": "crx pack extension -o ./extension.crx",
    "pack:xpi": "cross-env WEB_EXT_ARTIFACTS_DIR=./ web-ext build --source-dir ./extension --filename extension.xpi --overwrite-dest",
    "start:chromium": "web-ext run --source-dir ./extension --target=chromium",
    "start:firefox": "web-ext run --source-dir ./extension --target=firefox-desktop",
    "clear": "rimraf --glob extension/dist extension/manifest.json extension.*",
    "lint": "eslint --cache .",
    "test": "vitest test",
    "postinstall": "simple-git-hooks",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@antfu/eslint-config": "3.12.1",
    "@ffflorian/jszip-cli": "3.8.2",
    "@types/fs-extra": "11.0.4",
    "@types/node": "22.10.2",
    "@types/webextension-polyfill": "0.12.1",
    "@typescript-eslint/eslint-plugin": "8.18.2",
    "@unocss/preset-rem-to-px": "0.65.2",
    "@unocss/reset": "0.65.2",
    "@vitejs/plugin-vue": "5.2.1",
    "@vue/compiler-sfc": "3.5.13",
    "@vue/test-utils": "2.4.6",
    "@vueuse/core": "12.2.0",
    "@vueuse/shared": "12.2.0",
    "chokidar": "4.0.3",
    "cross-env": "7.0.3",
    "crx": "5.0.1",
    "eslint": "9.17.0",
    "esno": "4.8.0",
    "fs-extra": "11.2.0",
    "jsdom": "25.0.1",
    "kolorist": "1.8.0",
    "lint-staged": "15.2.11",
    "npm-run-all": "4.1.5",
    "rimraf": "6.0.1",
    "simple-git-hooks": "2.11.1",
    "typescript": "5.7.2",
    "unocss": "0.65.2",
    "unplugin-auto-import": "0.19.0",
    "unplugin-vue-components": "0.28.0",
    "vite": "6.0.5",
    "vitest": "2.1.8",
    "vue": "3.5.13",
    "web-ext": "8.3.0",
    "webext-bridge": "6.0.1",
    "webextension-polyfill": "0.12.0"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
